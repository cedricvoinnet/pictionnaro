<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.AppCompat.Light"
    tools:context=".Acitivities.BoardListActivity"
    android:background="@color/colorBackground">

    <Button
        android:id="@+id/create_game_button"
        android:text="@string/create_new_game"
        android:textColor="@color/background_material_light"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <ListView
        android:layout_marginTop="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BoardList"
        android:layout_below="@+id/create_game_button"
        android:divider="@android:color/transparent"
        android:dividerHeight="7.0sp"/>
</RelativeLayout>
